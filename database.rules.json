{
		"rules": {
				"game": {
						".read": "auth != null",
						".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"
				},
				"game_instance": {
						".read": "auth != null",
						".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"
				},
				"session": {
						".read": "auth != null",
						".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"
				},
				"invitation": {
						"sent": {
								".read": "auth != null",
								"$uid": {
										".read": "auth != null",
										".write": "true"
								}
						},
						"accepted": {
								".read": "auth != null",
								".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"
						}
				},
				"authentication": {
						"users": {
								"$uid": {
										".read": "auth != null || root.child('authentication').child('admins').child(auth.uid).val() == true",
										".write": "auth != null || root.child('authentication').child('admins').child(auth.uid).val() == true"
								},	
								".read": "root.child('authentication').child('admins').child(auth.uid).val() == true",
								".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"		
						},
						"admins": {
								".read": "root.child('authentication').child('admins').child(auth.uid).val() == true",
								".write": "root.child('authentication').child('admins').child(auth.uid).val() == true"
						}
				}
		}
}